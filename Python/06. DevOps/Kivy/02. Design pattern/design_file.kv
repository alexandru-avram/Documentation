<MyGridLayout>
# COMMENT

    name: name
    pizza: pizza
    color: color

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Favorite Pizza"
            TextInput:
                id: pizza
                multiline: False

            Label:
                text: "Favorite Color"
            TextInput:
                id: color
                multiline: False
        
        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()

            # Color: RGB - A (red, gree, blue and opacity, between 0 and 1)
            # Color picker website to get the color you want
            backgroun_normal: ''
            background_color: (0.63, 1, 0.49, 1)
            