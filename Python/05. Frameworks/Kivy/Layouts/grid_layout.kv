#: import utils kivy.utils
<MyGridLayout>
# COMMENT

    # Creating variables which will be assigned to TextInput ids and use them as objects in our app

    name1: name1
    name2: name2
    name3: name3

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name 1"
            TextInput:
                id: name1
                multiline: False

            Label:
                text: "Name 2"
            TextInput:
                id: name2
                multiline: False

            Label:
                text: "Name 3"
            TextInput:
                id: name3
                multiline: False
        
        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()

            # Color
            backgroun_normal: ''
            #background_color: (0.63, 1, 0.49, 1)
            background_color: utils.get_color_from_hex("#eefa00")